<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
  
<hibernate-configuration>  
  
    <session-factory>  
        <property name="hbm2ddl.auto">update</property>  
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>  
        <property name="hibernate.connection.url">jdbc:hsqldb:hsql://localhost/workdb</property>  
        <property name="hibernate.connection.username">sa</property>  
        <property name="hibernate.connection.password"></property>  
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>  
             <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <mapping class="com.javawebtutor.model.Adres "/>
        <mapping class="com.javawebtutor.model.Dzial"/>
        <mapping class="com.javawebtutor.model.Egzemplarz"/>
        <mapping class="com.javawebtutor.model.Jezyk"/>
        <mapping class="com.javawebtutor.model.klientPubliczny"/>
        <mapping class="com.javawebtutor.model.klientSamodzielny"/>
        <mapping class="com.javawebtutor.model.Nosnik"/>
        <mapping class="com.javawebtutor.model.Oddzial"/>
        <mapping class="com.javawebtutor.model.Pracownik"/>
        <mapping class="com.javawebtutor.model.StanTytulu"/>
        <mapping class="com.javawebtutor.model.Tytul"/>
        
     <!--  <mapping resource="Userr.hbm.xml" />  --> 
    </session-factory>  
</hibernate-configuration> 